<%= form_tag(login_path, { method: :post, class: "navbar-form navbar-right", id: "login-form" } ) do %>
	<div class="form-group">
	  <%= text_field_tag :email, nil, placeholder: "Email", class: 'form-control' %>
	  <%= password_field_tag :password, nil, placeholder: "Password", class: 'form-control' %>
	</div>
	<%= submit_tag "Log in", id: "login-submit", class: 'btn btn-default' %>
	<%= link_to 'Sign up', new_user_registration_path, remote: true, class: 'btn btn-info', id: "sign-up"%>
<%end%>
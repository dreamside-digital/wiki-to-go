<h1><%= @book.title %></h1>
<div class="article-list">
	<ul><% @articles.each do |article| %>
    <div class="article-item">
  		<li><%= link_to article.title, article.url, target: 'blank' %></li>
      <%= content_tag :button, class: "btn-show-article #{article.pageid}" do%> Show article<% end %>
      <%= content_tag :button, class: "btn-hide-article #{article.pageid}" do%> Hide article<% end %>
      <%= content_tag :button, class: "btn-toggle-article #{article.pageid}" do%> Show article<% end %>
      <%= content_tag :div, class: "article-iframe", id: article.pageid do %>
      <%end%>
    </div>
	<% end %>
	</ul>
</div>

<%= link_to "Back", root_path %>

<div class="modal fade" id="save-book-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Save your articles</h4>
      </div>
      <div class="modal-body">
        <%= form_for [@user, @book] do |f| %>
        <%= f.label :title, "Choose a title for this collection" %>
        <%= f.text_field :title, id: "book-title", class: "form-control", placeholder: "Location" %>
      </div>
      <div class="modal-footer">
        <%= f.submit %>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
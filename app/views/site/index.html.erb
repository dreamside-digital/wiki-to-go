<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Wiki To Go</a>
    </div>
    <%if session[:name] %>
          <%= render 'sessions/logout' %>
    <% else %>
          <%= render 'sessions/login' %>
    <% end %>
  </div>
</nav>

<div class="search-area">
  <div class="search_coords col-md-6">
    <button id="get-loc" class="btn btn-default">Search near you <span class="glyphicon glyphicon-screenshot" aria-hidden="true"></span></button>
  </div>

  <div class="seach_query col-md-6">
    <div class="search_form">
      <%= form_tag("/search", method: "get", :id => 'search', class: 'form-inline') do %>
        <%= text_field_tag :query, nil, placeholder: "Search by location", class: 'form-control' %>
        <button type="submit" id="search-query" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
      <%end%>
    </div>
  </div>
</div>

<div class="search-area-tab"></div>

<div class="map-area map-area-intro">
	<div id="map-canvas" style="width: 100%; height: 100%"> </div>
</div>

<div class="user-selected-articles col-md-4">
  <%= render 'selected_articles' %>
</div>

<div class="all-results col-md-8">  
  <div id="results"></div>  
</div>


<% if current_user %>
  <script>
    window.UserId = <%= current_user.id %>;
  </script>
<%end %>


<div class="search-menu">

  <div class="show-and-hide">
    <button class="btn show-search-btn highlight-btn"><span class="search-btn-text">Search</span><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
    <button class="btn hide-search-btn"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></button>
  </div>

  <div class="search-area">
    <div class="row">
      <div class="search-coords">
        <button id="get-loc" class="btn btn-default">Search near you <span class="glyphicon glyphicon-screenshot" aria-hidden="true"></span></button>
      </div>
    </div>
    <div class="row">
      <div class="search-query">
        <div class="search-form">
          <%= form_tag("/search", method: "get", :id => 'search', class: 'form-inline') do %>
            <%= text_field_tag :query, nil, placeholder: "Search by location", class: 'form-control' %>
            <button type="submit" id="search-query" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
          <%end%>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="initial-search col-md-12">
  <div class="title-area">
    <h1><span class="light">Wiki </span><span class="heavy">To Go</span></h1>
    <ul class="list-unstyled">
      <li><h3>- search wikipedia by location -</h3></li>
      <li><h3>- save your favourite articles -</h3></li>
      <li><h3>- export your saved articles to take with you -</h3></li>
    </ul>

    <div class="search-coords">

      <%= button_tag id: "get-loc", class: "btn btn-default highlight-btn" do %>
        Search near you <span class="glyphicon glyphicon-screenshot" aria-hidden="true"></span>
      <% end %>
      <%= text_field_tag :query, nil, placeholder: "Search by location", class: 'col-md-6', id: 'search-query' do %>
        Search any location
      <% end %>
    </div>
  </div>
</div>


<div class="row cover">
  <div class="map-area map-area-intro">
    <div id="map-canvas" style="width: 100%; height: 100%"> </div>
  </div>
  <div id="info-preview" class="col-md-3">
  </div>

  <div id="intro-text" class="col-md-3">
    <button class="btn close-intro-text-btn"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></button>
    <h3>See something interesting?</h3>
    <% if current_user %>
    <%= render 'intro_loggedin' %>
    <% else %>
    <%= render 'intro_loggedout' %>
    <% end %>
  </div>
</div>
<div class="row">

  <div class="user-selected-articles col-md-8 col-centered">
    <%= render 'selected_articles' %>
  </div>
  <div class="all-results col-md-8 col-centered">  
    <div id="results"></div> 
  </div>

</div>


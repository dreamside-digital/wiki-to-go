<div class="user-profile col-md-6 col-centered">
  
  <h1>Sign up</h1>


<div class='user-profile-registration-form'>
  <% if @user.errors.any? %>
  <div class="col-md-10 col-centered user-profile-error-messages">
    <ul class="list-unstyled">
      <% @user.errors.full_messages.each do |msg| %>
        <li><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  </div>

  <div class="user-profile-registration-form-fields">
    <%= form_for [@user] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Name" %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, placeholder: "Email address" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Password confirmation" %>
      </div>
    </div>
  </div>
      <%= f.submit value: "Save", class: 'btn' %>
    <% end %>
</div>
